<OrderScreen>:
    canvas.before:
        Color:
            rgba: 255/255, 255/255, 255/255, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]

    orientation: 'vertical'
    spacing: 20
    padding: [50, 50]

    Label:
        text: "Tonny & Manny orders"
        color: 0, 0, 0, 1
        font_size: '30sp'
        size_hint: None, None
        size: 300, 50
        pos_hint: {'center_x': 0.5, 'top': 0.9}

    BackCard:
        image: "../src/frontend/images/back.png"
        size_hint: 0.2, 0.2
        size: 144, 144
        pos_hint: {'center_x': 0.06, 'center_y': 0.9}
        on_press: root.on_back_press()

    BoxLayout:
        orientation: 'vertical'
        padding: [100, 200, 0, 0]
        spacing: 10

        ScrollView:
            GridLayout:
                id: inner_layout
                cols: 1
                size_hint_y: 0.2
                height: self.minimum_height
