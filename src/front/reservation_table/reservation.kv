<ReservationScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]

    Label:
        text: 'Reservation de salle'
        #color black
        color: 0, 0, 0, 1
        font_size: '30sp'
        size_hint: None, None
        size: 300, 50
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        spacing: 10

    BoxLayout:
        orientation: 'vertical'
        padding: [100, 200, 0, 0]
        spacing: 10

        ScrollView:
            GridLayout:
                id: inner_layout
                cols: 1
                size_hint_y: None
                height: self.minimum_height

    BackCard:
        image: "../src/images/back.png"
        size_hint: 0.2, 0.2
        size: 144, 144
        pos_hint: {'center_x': 0.06, 'center_y': 0.9}
        on_press: root.on_back_press()

    Button:
        text: "Valider"
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.8, 'center_y': 0.5}
        color: 1, 1, 1, 1
        background_color: 0, 0, 0, 1
        on_press: root.on_validate_button_press()


<BackCard@MDCard>:
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 0
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [25, 25, 25, 25]  # Adjust the radius values as needed

    md_bg_color: 1, 1, 1, 0

    padding: dp(15)
    spacing: dp(15)
    image: ""

    orientation: 'vertical'

    Image:
        source: root.image
        size_hint_y: None
        height: dp(100)
