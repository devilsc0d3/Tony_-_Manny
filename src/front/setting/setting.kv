<SettingScreen>:
    canvas.before:
        Color:
            rgba: 255/255, 255/255, 255/255, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]

    orientation: 'vertical'
    spacing: 20
    padding: [50, 50]

    Label:
        text: "Tonny & Manny settings"
        color: 0, 0, 0, 1
        font_size: '30sp'
        size_hint: None, None
        size: 300, 50
        pos_hint: {'center_x': 0.5, 'top': 0.9}

    BackCard:
        image: "C:\\Users\\faure_jadlbzp\\Desktop\\sql project\\src\\images\\back.png"
        size_hint: 0.2, 0.2
        size: 144, 144
        pos_hint: {'center_x': 0.06, 'center_y': 0.9}
        on_press: root.on_back_press()

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "First name"
            color: 0, 0, 0, 1
            font_size: '20sp'
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': 0.2, 'center_y': 0.2}

        Label:
            text: "Last name"
            color: 0, 0, 0, 1
            font_size: '20sp'
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': 0.2, 'center_y': 0.3}

        Label:
            text: "Phone number"
            color: 0, 0, 0, 1
            font_size: '20sp'
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': 0.2, 'center_y': 0.4}

        Label:
            text: "Password"
            color: 0, 0, 0, 1
            font_size: '20sp'
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': 0.2, 'center_y': 0.5}

<BackCard@MDCard>:
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 0
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [25, 25, 25, 25]  # Adjust the radius values as needed

    md_bg_color: 1, 1, 1, 0

    padding: dp(15)
    spacing: dp(15)
    image: ""

    orientation: 'vertical'


    Image:
        source: root.image
        size_hint_y: None
        height: dp(100)
